<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.databasepractise.MainActivity$PlaceholderFragment" >

    <EditText
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/password_text"
        android:layout_below="@+id/username_text"
        android:ems="10"
        android:inputType="textPersonName" >

          <requestFocus />
          </EditText>

    <TextView
        android:id="@+id/password_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/username_text"
        android:layout_below="@+id/username_text"
        android:layout_marginTop="33dp"
        android:text="@string/password" />

    <EditText
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/username_text"
        android:layout_below="@+id/password_text"
        android:ems="10"
        android:inputType="textPassword" >

        <requestFocus />
    </EditText>

            <Button
                android:id="@+id/saveButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/password"
                android:layout_alignRight="@+id/username"
                android:layout_below="@+id/password"
                android:onClick="addUser"
                android:text="@string/save" />

            <Button
                android:id="@+id/ViewDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/saveButton"
                android:layout_alignRight="@+id/saveButton"
                android:layout_below="@+id/saveButton"
                android:text="@string/view_details" />

            <TextView
                android:id="@+id/username_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="0dp"
                android:text="@string/username" />

            <TextView
                android:id="@+id/delete_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ViewDetails"
                android:layout_alignLeft="@+id/ViewDetails"
                android:text="@string/delete_user" />

            <EditText
                android:id="@+id/delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/delete_text"
                android:layout_below="@+id/delete_text"
                android:inputType="textPersonName"
                android:layout_marginTop="0dp"
                android:ems="10" />

            <Button
                android:id="@+id/delete_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/delete"
                android:layout_alignRight="@+id/delete"
                android:layout_below="@+id/delete"
                android:text="@string/delete" />

            <TextView
                android:id="@+id/update_text_old_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@+id/delete_text"
                android:layout_below="@+id/delete_button"
                android:text="@string/old_user" />

            <EditText
                android:id="@+id/update_old_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_alignLeft="@+id/delete_button"
                android:layout_below="@+id/update_text_old_username"
                android:ems="10" />

            <TextView
                android:id="@+id/update_text_new_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/update_old_username"
                android:layout_below="@+id/update_old_username"
                android:text="@string/new_user" />

            <EditText
                android:id="@+id/update_new_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:layout_alignLeft="@+id/update_text_new_username"
                android:layout_below="@+id/update_text_new_username"
                android:ems="10" />

            <Button
                android:id="@+id/update_user_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/update_new_username"
                android:layout_below="@+id/update_new_username"
                android:layout_marginTop="0dp"
                android:text="@string/update_user" />

</RelativeLayout>